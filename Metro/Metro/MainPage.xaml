			<Paragraph>
    			<Run x:Name="way2" Text="" FontSize="70"/>
    		</Paragraph>
    		<Paragraph>
<Run x:Name="way2time1" Text=""  FontSize="50"/>
<Run x:Name="way2time2" Text=""  FontSize="50"/>
            </Paragraph>
    	</RichTextBlock>
    	<Button Grid.ColumnSpan="2" Content="출발!" HorizontalAlignment="Left" Height="55.5" Margin="571,101.5,0,0" Grid.Row="1" Grid.RowSpan="2" VerticalAlignment="Top" Width="224.5" Background="White" BorderBrush="Black" Foreground="Black" FontSize="29.333" Click="Button_Click_1"/>
      
